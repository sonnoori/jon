#include <iostream>
using namespace std;

int main() {
    int arr[10] = {};
    int COUNT = 0;
    int SUM = 0;
    cout.precision(1);
    cout << fixed;

    for(int i = 0 ; i < 10 ; i ++)
    {
        cin >> arr[i];
        
    }

    for(int i = 0; i < 10 ; i++)
    {
        if(arr[i] % 2 == 0)
        {
            if(arr[i] == 0)
            {
                break;
            }
            SUM += arr[i];
            COUNT ++;
        }
    }
    cout << COUNT << " " << SUM;
    return 0;
}
